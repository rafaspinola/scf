<%= simple_form_for(@material) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.association :movement, collection: Movement.materialsa %>
    <%= f.input :description %>
    <%= f.input :quantity %>
    <%= f.input :unit_value %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
