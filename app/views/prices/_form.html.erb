<%= simple_form_for(@price) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.association :course %>
    <%= f.input :description %>
    <%= f.input :payment_value %>
    <%= f.input :payment_quantity %>
    <%= f.input :active, as: :radio_buttons %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
