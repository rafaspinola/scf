<h1>Lista de <%= t('courses.pcn') %></h1>

<table class="table table-striped">
  <thead>
    <tr>
      <th><%= t('courses.name') %></th>
      <th><%= t('courses.code') %></th>
      <th><%= t('courses.price6') %></th>
      <th><%= t('courses.price5') %></th>
      <th><%= t('courses.price4') %></th>
      <th><%= t('courses.price3') %></th>
      <th><%= t('courses.price2') %></th>
      <th><%= t('courses.price') %></th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @courses.each do |course| %>
      <tr>
        <td><%= course.name %></td>
        <td><%= course.code %></td>
        <td><%= course.price6 %></td>
        <td><%= course.price5 %></td>
        <td><%= course.price4 %></td>
        <td><%= course.price3 %></td>
        <td><%= course.price2 %></td>
        <td><%= course.price %></td>
        <td><%= link_to 'Show', course %></td>
        <td><%= link_to 'Edit', edit_course_path(course) %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Course', new_course_path %>
