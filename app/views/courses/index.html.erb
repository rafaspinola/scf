<h1>Lista de <%= t('courses.pcn') %></h1>

<table class="table table-striped">
  <thead>
    <tr>
      <th><%= t('simple_form.labels.course.name') %></th>
      <th><%= t('simple_form.labels.course.code') %></th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @courses.each do |course| %>
      <tr>
        <td><%= course.name %></td>
        <td><%= course.code %></td>
        <td><%= link_to t("commands.show"), course %></td>
        <td><%= link_to t("commands.edit"), edit_course_path(course) %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Course', new_course_path %>
