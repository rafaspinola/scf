<%= simple_form_for(@trainer) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :name %>
    <%= f.input :bank %>
    <%= f.input :agency %>
    <%= f.input :account %>
    <%= f.input :operation %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
