<%= simple_form_for(@participant) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :name %>
    <%= f.input :cpf %>
    <%= f.input :birthday %>
    <%= f.input :marital_state %>
    <%= f.input :address %>
    <%= f.input :neighborhood %>
    <%= f.input :city %>
    <%= f.input :state %>
    <%= f.input :postal_code %>
    <%= f.input :phone %>
    <%= f.input :cellphone %>
    <%= f.input :email %>
    <%= f.input :profession %>
    <%= f.input :job_description %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
