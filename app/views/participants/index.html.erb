<h1>Listing participants</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Cpf</th>
      <th>Birthday</th>
      <th>Marital state</th>
      <th>Address</th>
      <th>Neighborhood</th>
      <th>City</th>
      <th>State</th>
      <th>Postal code</th>
      <th>Phone</th>
      <th>Cellphone</th>
      <th>Email</th>
      <th>Profession</th>
      <th>Job description</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @participants.each do |participant| %>
      <tr>
        <td><%= participant.name %></td>
        <td><%= participant.cpf %></td>
        <td><%= participant.birthday %></td>
        <td><%= participant.marital_state %></td>
        <td><%= participant.address %></td>
        <td><%= participant.neighborhood %></td>
        <td><%= participant.city %></td>
        <td><%= participant.state %></td>
        <td><%= participant.postal_code %></td>
        <td><%= participant.phone %></td>
        <td><%= participant.cellphone %></td>
        <td><%= participant.email %></td>
        <td><%= participant.profession %></td>
        <td><%= participant.job_description %></td>
        <td><%= link_to t("commands.show"), participant %></td>
        <td><%= link_to t("commands.edit"), edit_participant_path(participant) %></td>
        <td><%= link_to t("commands.destroy"), participant, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

