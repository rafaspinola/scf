<h1>Listing movements</h1>

<table>
  <thead>
    <tr>
      <th>Due date</th>
      <th>Description</th>
      <th>Value</th>
      <th>Course class</th>
      <th>Account</th>
      <th>Result center</th>
      <th>Bank</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @movements.each do |movement| %>
      <tr>
        <td><%= movement.due_date %></td>
        <td><%= movement.description %></td>
        <td><%= movement.value %></td>
        <td><%= movement.course_class %></td>
        <td><%= movement.account %></td>
        <td><%= movement.result_center %></td>
        <td><%= movement.bank %></td>
        <td><%= link_to 'Show', movement %></td>
        <td><%= link_to 'Edit', edit_movement_path(movement) %></td>
        <td><%= link_to 'Destroy', movement, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

