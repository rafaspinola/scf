<h1>Listing accounts</h1>

<table>
  <thead>
    <tr>
      <th>Description</th>
      <th>Top account</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @accounts.each do |account| %>
      <tr>
        <td><%= account.description %></td>
        <td><%= account.top_account %></td>
        <td><%= link_to t("commands.show"), account %></td>
        <td><%= link_to t("commands.edit"), edit_account_path(account) %></td>
        <td><%= link_to t("commands.destroy"), account, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Account', new_account_path %>
