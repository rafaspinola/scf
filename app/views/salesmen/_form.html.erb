<%= simple_form_for(@salesman) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :name %>
    <%= f.input :phone %>
    <%= f.input :bank %>
    <%= f.input :agency %>
    <%= f.input :account %>
    <%= f.input :operation %>
    <%= f.input :identifier %>
    <%= f.association :user %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
